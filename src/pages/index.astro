---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Permanent Homes - Building Community Through Permanent Residency',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact',
        target: '_self',
      },
      {
        variant: 'secondary',
        text: 'Learn More',
        href: '#features',
      },
    ]}
    image={{ src: '~/assets/images/paonia-home.jpg', alt: 'A beautiful mountain home in Paonia with a family on the porch' }}
  >
    <Fragment slot="title">
      Creating Permanent Homes for Paonia
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        We're reimagining real estate to strengthen our community by connecting legacy-minded sellers with future permanent residents.
      </span>
    </Fragment>
  </Hero>

  <!-- Features Widget -->
  <Features
    id="features"
    tagline="What Makes Us Different"
    title="A New Approach to Real Estate"
    subtitle="We're reimagining how homes can strengthen our community"
    items={[
      {
        title: '0% Commission',
        description:
          'We&#39;ve eliminated traditional real estate commissions to make homeownership more affordable.',
        icon: 'tabler:coin',
      },
      {
        title: 'Legacy-Focused Sales',
        description:
          'We work with sellers who care about more than just the highest bid, focusing on preserving community values.',
        icon: 'tabler:hearts',
      },
      {
        title: 'Community First',
        description:
          'We exclusively work with buyers who plan to make Paonia their primary residence.',
        icon: 'tabler:home',
      },
      {
        title: 'Local Focus',
        description:
          'Our deep understanding of Paonia helps us thoughtfully connect legacy-minded sellers with future residents.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Steps Widget -->
  <Steps
    title="Our Process"
    items={[
      {
        title: 'Buyer Consultation',
        description:
          'Meet with our team to discuss your housing needs and confirm your intention to make Paonia your permanent home.',
        icon: 'tabler:users',
      },
      {
        title: 'Seller Legacy Planning',
        description:
          'For sellers, we start by understanding your home&#39;s story and your vision for its future in our community.',
        icon: 'tabler:building-estate',
      },
      {
        title: 'Thoughtful Matching',
        description:
          'We carefully connect legacy-minded sellers with buyers who will be good stewards of the home&#39;s future.',
        icon: 'tabler:heart-plus',
      },
      {
        title: 'Complete Support',
        description:
          'Navigate the entire process with our support, from offer to closing, while saving thousands in commission fees.',
        icon: 'tabler:check',
      },
    ]}
  />

  <!-- CallToAction Widget -->
  <CallToAction
    actions={[{
      variant: 'primary',
      text: 'Contact Us',
      href: '/contact',
      target: '_self',
      icon: 'tabler:mail',
    }]}
  >
    <Fragment slot="title">
      Ready to Find Your Permanent Home?
    </Fragment>
    <Fragment slot="subtitle">
      Whether you&#39;re looking to buy a permanent home or sell to a future caretaker, we&#39;re here to help build a stronger Paonia.
    </Fragment>
  </CallToAction>
</Layout>
