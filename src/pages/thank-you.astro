---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Button from '~/components/ui/Button.astro';

export const prerender = true;

const metadata = {
  title: 'Thank You',
};
---

<Layout metadata={metadata}>
  <HeroText
    title="Thank You for Reaching Out!"
    subtitle="We appreciate your interest in Permanent Homes. Our team will review your message and get back to you soon. We're excited to help you explore sustainable, long-term housing solutions in our beautiful Paonia community."
  />

  <section class="relative md:py-12 m-6">
    <div class="relative mx-auto max-w-5xl px-4 md:px-6 py-4 md:py-6 text-default text-center">
      <p class="mb-8 text-lg">
        While you wait, feel free to explore more about our properties and vision for creating lasting homes in our community.
      </p>
      <div class="mt-6 flex justify-center">
        <Button href="/" variant="primary">Return to Homepage</Button>
      </div>
    </div>
  </section>
</Layout>
